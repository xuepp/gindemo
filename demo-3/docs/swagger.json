{
    "swagger": "2.0",
    "info": {
        "description": "API to simulate CPU and memory load",
        "title": "GoPeck Stress Test API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:6081",
    "basePath": "/",
    "paths": {
        "/cpu": {
            "get": {
                "description": "Perform CPU intensive calculation",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "stress"
                ],
                "summary": "CPU Stress Test",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 10000000,
                        "description": "Number of iterations",
                        "name": "iterations",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/memory": {
            "get": {
                "description": "Allocate memory to simulate memory usage",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "stress"
                ],
                "summary": "Memory Stress Test",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 100,
                        "description": "Memory size in MB",
                        "name": "sizeMB",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/ping": {
            "get": {
                "description": "用于测试服务是否可用",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Health"
                ],
                "summary": "Ping 接口",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}